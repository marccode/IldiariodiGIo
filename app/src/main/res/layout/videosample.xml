<?xml version="1.0" encoding="utf-8"?>
<Linearlayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Surfaceview
            android:id="@+id/surfaceViewFrame"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </Surfaceview>

        <Linearlayout
            android:gravity="center_vertical"
            android:id="@+id/linearLayoutMediaController"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Textview
                android:gravity="center"
                android:id="@+id/textViewPlayed"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="0dp"
                android:text="0:00:00" />

            <Seekbar android:id="@+id/seekBarProgress"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:progress="50" />

            <Textview
                android:gravity="center"
                android:id="@+id/textViewLength"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="0dp"
                android:text="0:00:00" />

        </Linearlayout>

        <Progressbar
            android:id="@+id/progressBarWait"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Imageview
            android:id="@+id/imageViewPauseIndicator"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/pause_icon_24"/>

</Linearlayout>