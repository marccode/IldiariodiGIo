<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polimi.deib.ildiariodigio.FirstLoginActivity"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/title_primo_acceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:src="@drawable/title_modify_profile"/>
    <ImageView
        android:id="@+id/modify_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/screen_modify_instructions"
        android:layout_below="@+id/title_primo_acceso"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button_modifica"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_enter"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_toStartOf="@+id/textView3"
        android:weightSum="20"
        android:layout_toLeftOf="@+id/textView3"

        android:layout_alignTop="@+id/title_primo_acceso">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/imageButton_upload_parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/upload_photo_parent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_weight="0.3" />

        <EditText
            android:id="@+id/EditxParent"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/text_field"
            android:inputType="textCapWords"

            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="39dp"
            android:hint="Nome genitore"
            android:layout_weight="0.3"
            android:textColorHint="#a4a4a4" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:weightSum="20"
        android:layout_toRightOf="@+id/textView3"
        android:id="@+id/linearLayout2"
        android:layout_alignTop="@+id/title_primo_acceso">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/imageButton_upload_kid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/upload_photo_kid"
            android:layout_gravity="center"
            android:layout_weight="0.3" />

        <EditText
            android:id="@+id/EditxKid"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/text_field"
            android:inputType="textCapWords"
            android:contextClickable="true"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="39dp"
            android:layout_gravity="top|center"
            android:hint="Nome bambino"
            android:layout_weight="0.3"
            android:textColorHint="#a4a4a4" />


    </LinearLayout>

    <TextView
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/title_primo_acceso"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</RelativeLayout>
