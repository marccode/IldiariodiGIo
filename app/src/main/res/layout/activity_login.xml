<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.polimi.deib.ildiariodigio.LoginActivity">

    <ImageView
        android:id="@+id/chi_sei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:src="@drawable/chi_sei_title"/>

    <LinearLayout
        android:layout_below="@id/chi_sei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip">

        <ImageButton
            android:id="@+id/imageButton_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dip"
            android:src="@drawable/profile_placeholder"
            android:background="@drawable/button_parent_login"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:id="@+id/imageButton_kid"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dip"
            android:src="@drawable/profile_placeholder"
            android:background="@drawable/button_kid_login"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_enter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
