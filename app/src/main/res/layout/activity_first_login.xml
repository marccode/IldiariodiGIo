<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.polimi.deib.ildiariodigio.FirstLoginActivity">

    <ImageView
        android:id="@+id/title_primo_acceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:src="@drawable/title_primo_acceso"/>

    <ImageView
        android:id="@+id/text_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_primo_acceso"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip"
        android:src="@drawable/text_instructions"/>

    <ImageButton
        android:id="@+id/button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_enter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton_upload_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dip"
            android:background="@drawable/upload_photo_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="200dp"/>


        <ImageButton
            android:id="@+id/imageButton_upload_kid"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:background="@drawable/upload_photo_kid"
            android:layout_marginTop="200dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nome_genitori"
            android:layout_weight="0.31"
            android:layout_width="0dp"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_field"
            android:layout_marginTop="300dp"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/nome_bambino"
            android:layout_weight="0.31"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_field"
            android:layout_marginTop="300dp"
            android:inputType="textCapWords"/>


    </LinearLayout>

</RelativeLayout>
