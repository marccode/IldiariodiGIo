<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.polimi.deib.ildiariodigio.FirstLoginActivity">

    <ImageView
        android:id="@+id/title_primo_acceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:src="@drawable/title_primo_acceso"/>

    <ImageView
        android:id="@+id/text_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_primo_acceso"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip"
        android:src="@drawable/text_instructions"/>

    <ImageButton
        android:id="@+id/button_modifica"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_enter"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton_upload_kid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/upload_photo_kid"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_modifica"
        android:layout_toStartOf="@+id/button_modifica" />

    <ImageButton
        android:id="@+id/imageButton_upload_parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/upload_photo_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_above="@+id/nome_bambino"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"/>

    <EditText
        android:id="@+id/nome_genitori"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/text_field"
        android:inputType="textCapWords"
        android:layout_below="@+id/imageButton_upload_kid"
        android:layout_alignLeft="@+id/imageButton_upload_kid"
        android:layout_alignStart="@+id/imageButton_upload_kid"
        android:hint="Nome bambino"
        android:textColorHint="#a4a4a4" />

    <EditText
        android:id="@+id/nome_bambino"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/text_field"
        android:inputType="textCapWords"

        android:layout_below="@+id/imageButton_upload_kid"
        android:layout_alignLeft="@+id/imageButton_upload_parent"
        android:layout_alignStart="@+id/imageButton_upload_parent"
        android:hint="Nome genitore"
        android:textColor="#ffffff"
        android:textColorHint="#a4a4a4" />

</RelativeLayout>